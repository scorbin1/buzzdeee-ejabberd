<%- if @enable_mod_stun_disco -%>  mod_stun_disco: {}
<%- else -%>  ## mod_stun_disco: {}
<%- end -%>
<%- if @enable_mod_vcard -%>  mod_vcard:
    search: <%= @mod_vcard_search_enable %>
<%- if @mod_vcard_xupdate_enable -%>  mod_vcard_xupdate: {}
<%- end -%>
<%- end -%>
<%- if @enable_mod_version -%>  mod_version: {}
