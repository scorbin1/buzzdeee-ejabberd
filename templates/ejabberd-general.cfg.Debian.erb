###


# loglevel: Verbosity of log files generated by ejabberd
loglevel: <%= @log_level %>

# log_rotate_count: The number of rotated log files to keep.
log_rotate_count: <%= @log_rotate_count %>

# hosts: Domains served by ejabberd.
# You can define one or several, for example:
# hosts:
#   - "example.net"
#   - "example.com"
#   - "example.org"

<% if @domains.is_a? Array -%>
hosts:
<%- @domains.each do |domain| -%>
  - <%= domain %>
<%- end -%>
<%- else -%>
hosts:
  "- <%= @domains %>"
<% end -%>

certfiles:
  - "<%= @servercertfile %>"

# TLS configuration
define_macro:
  'TLS_CIPHERS': "HIGH:!aNULL:!eNULL:!3DES:@STRENGTH"
  'TLS_OPTIONS':
<% if @tls_options.is_a? Array -%>
<%- @tls_options.each do |option| -%>
    - "<%= option %>"
<%- end -%>
<%- else -%>
    - "<%= tls_options %>"
<% end -%>
    # 'DH_FILE': "/path/to/dhparams.pem"
    # generated with: openssl dhparam -out dhparams.pem 2048

c2s_ciphers: 'TLS_CIPHERS'
s2s_ciphers: 'TLS_CIPHERS'
c2s_protocol_options: 'TLS_OPTIONS'
s2s_protocol_options: 'TLS_OPTIONS'
# c2s_dhfile: 'DH_FILE'
# s2s_dhfile: 'DH_FILE'

<% if @language != 'en' and @language != '' %>language: <%= @language %><% end %>